.wrapper
  = render partial: 'header'
  .main-content
    %h2 最新記事一覧
    - @posts.each do |post|
      .main-content__article
        = link_to "■【#{post.title}】", post_path(post), class: 'main-content__article__detail'
        = link_to "投稿者：#{post.user.name}", user_path(post), class: 'main-content__article__detail-name'
  %ul
    %li=paginate(@posts)
  .footer